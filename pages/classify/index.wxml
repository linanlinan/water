<view class="container">
  <view class="nav_left">
    <block wx:for="{{navLeftItems}}">
      <view class="nav_left_items {{curNav == item.id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.id}}">{{item.label}}</view>
    </block>
  </view>
  <view class="nav_right">
    <view wx:if="{{navRightItems.length > 0}}">
      <block wx:for="{{navRightItems}}">
        <view class="choice_item">
            <image src="{{item.img}}"/>
            <view class="info-box">
              <view class="ib-left">
                  <view class="title">{{item.goodsname}}</view>
                  <view class="price">￥{{item.price}}</view>
              </view>
              <view class="ib-right">
                  <image src="../../images/addcar.png" bindtap="addCar" data-id="{{item.id}}" />
              </view>
          </view>
        </view>
      </block>
    </view>
    <view wx:else>暂无数据</view>
  </view>
</view>